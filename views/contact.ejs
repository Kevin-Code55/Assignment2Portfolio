<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Metadata and viewpoint -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact - Haider Raza</title>
</head>
<body>
    <!-- The header and navigation section for the site -->
    <header class="site-header gradient-hero">
        <div class="container">
            <%- include('partials/header') %>
            <%- include('partials/main_nav') %>
        </div>
    </header>

    <!--Main content for contact forms -->
    <main id="main" class="container">
        <section>
            <h2>Contact Me</h2>
            <form action="#" method="post">
                <fieldset>
                    <legend>Send a message</legend>

                    <!-- Name -->
                    <label for="name">Name</label>
                    <input
                    id="name"
                    name="name"
                    type="text"
                    required
                    minlength="2"
                    pattern="^[A-Za-z][A-Za-z\s'\-]{1,}$"
                    title="Please enter your full name (letters, spaces, apostrophes, or hyphens)."
                    />

                    <!-- Email -->
                    <label for="email">Email</label>
                    <input id="email" name="email" type="email" required />

                    <!-- Phone -->
                    <label for="phone">Cell No.</label>
                    <input
                    id="phone"
                    name="phone"
                    type="tel"
                    inputmode="tel"
                    pattern="^\s*\(?\d{3}\)?[-.\s]?\d{3}[-.\s]?\d{4}\s*$"
                    title="Enter a 10-digit phone number (e.g., 416-555-1234)"
                    required
                    />

                    <!-- Comments -->
                    <label for="comments">Comments</label>
                    <textarea
                    id="comments"
                    name="comments"
                    rows="5"
                    required
                    minlength="10"
                    maxlength="1000"
                    placeholder="Write at least 10 characters..."
                    ></textarea>

                    <!-- Submit -->
                    <button type="submit">Submit</button>
                </fieldset>
                </form>

        </section>
    </main>
</body>
    <%- include('partials/footer') %>
</html>